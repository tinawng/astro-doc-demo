---
import Layout from "@layouts/Layout.astro"
import { getCategories, getCategoryModuleNames } from "@scripts/utils"
---

<Layout title="Modules">
  <h1>DSP Modules Documentation</h1>

  <div class="mt-12 grid grid-cols-3 grid-rows-2 gap-6">
    {
      getCategories().map(category => (
        <a
          href={`${import.meta.env.BASE_URL}/categories/${category}`}
          class="card-link"
        >
          <h3>{category}</h3>
          <p class="text-muted">{getCategoryModuleNames(category).length} modules</p>
        </a>
      ))
    }
  </div>
</Layout>
