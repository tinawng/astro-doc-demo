---
import ParamEnum from "./ParamEnum.astro"
import ParamItem from "./ParamItem.astro"

const { params } = Astro.props
---

<table class="w-full mx-auto">
  <tbody>
    {
      Object.entries(params).map(([name, properties]) => (
        <tr class="border-b border-slate-200">
          <td class="pr-4">{name}</td>
          <td>
            {Object.entries(properties).map(property =>
              typeof property[1] === "object" ? <ParamEnum property={property} /> : <ParamItem property={property} />
            )}
          </td>
        </tr>
      ))
    }
  </tbody>
</table>
