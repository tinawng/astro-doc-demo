---
import type { ModuleDoc } from "../pages/index.astro"

interface Props {
  name: string
  module: ModuleDoc
}

const { name, module } = Astro.props
---

<tr class="text-sm border-b border-slate-300">
  <td class="p-2">
    <a href={`${import.meta.env.BASE_URL}/modules/${name}`}><strong>{name}</strong></a>
  </td>
  <td><a href={`${import.meta.env.BASE_URL}/categories/${module.category}`}>{module.category}</a></td>
  <td>{module.author}</td>
</tr>
