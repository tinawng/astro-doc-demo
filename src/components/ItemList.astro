---
const { items, itemName } = Astro.props
---

<div class="text-gray-700 bg-white shadow-md w-1/2 mx-auto rounded-xl bg-clip-border">
  <nav class="gap-1 p-2 text-center font-normal text-blue-gray-700">
    {
      items.map(item => (
        <a href={`${import.meta.env.BASE_URL}/${itemName}/${item}`}>
          <div
            role="button"
            class="w-full border-b p-2 leading-tight transition-all rounded-lg outline-none hover:bg-blue-gray-50 hover:bg-opacity-80 hover:text-blue-gray-900 focus:bg-blue-gray-50 focus:bg-opacity-80 focus:text-blue-gray-900 active:bg-blue-gray-50 active:bg-opacity-80 active:text-blue-gray-900"
          >
            {item}
          </div>
        </a>
      ))
    }
  </nav>
</div>
